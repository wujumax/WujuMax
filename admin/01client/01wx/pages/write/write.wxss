.headerBox {
  width: 700rpx;
  white-space: nowrap;
}

.headerItem {
  display: inline-block;
  padding-left: 40rpx;
  padding-right: 40rpx;
}

.headerItemView {
  display: flex;
  flex-direction: column;
  height: 80rpx;
  justify-content: space-between;
  align-items: center;
}

.title {
  color: #555;
  font-size: 33rpx;
  margin-left: 20rpx;
}

.titleSelect {
  color: #111;
  font-size: 36rpx;
}

.line {
  width: 50%;
  height: 10rpx;
  background: #2066ff;
  border-radius: 5rpx;
}

.divider {
  width: 750rpx;
  height: 4rpx;
  background: #eef0f5;
}

.examinationView {
  width: 700rpx;
  display: flex;
  flex-direction: column;
  border-bottom: 1rpx solid #333333;
}

.examinationView .item{
  display: flex;
  flex-direction: row;
  width: 700rpx;
  height: 150rpx;
  justify-content: space-between;
}
.examinationView .item .itemLeft{
  display: flex;
  flex-direction: row;
}

.examinationView .item .itemLeft .title {
  color: #111;
  font-size: 40rpx;
  font-weight: bold;
  margin-left: 30rpx;
}



.examinationView  .item .itemLeft .icon {
  margin-left: 20rpx;
  width: 60rpx;
  height: 60rpx;
}

.examinationView  .writeIcon{
  width: 60rpx;
  height: 60rpx;
}

.body{
  width: 750rpx;
}

.scrollItem{
  width: 100%;
  display: inline-block;
  padding-top: 40rpx;
}

.listSHow{
  display: flex;
  flex-direction: column;
  width: 750rpx;
  align-items: center;
}

.listSHow .item{
  display: flex;
  flex-direction: row;
  width: 80%;
  justify-content: space-between;
  align-items: center;
}

.listSHow .item .left{
  display: flex;
  flex-direction: column;
}

.listSHow .item .left .title{

}

.listSHow .item .left .progress{
  margin-top: 20rpx;
}