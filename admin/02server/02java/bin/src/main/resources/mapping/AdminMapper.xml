        sys_name = #{sysName,jdbcType=CHAR},
      </if>
      <if test="sysPwd != null" >
        sys_pwd = #{sysPwd,jdbcType=CHAR},
      </if>
    </set>
    where sys_id = #{sysId,jdbcType=INTEGER}
  </update>
  <update id="updateByPrimaryKey" parameterType="com.ff.pojo.Admin" >
    update admin
    set sys_name = #{sysName,jdbcType=CHAR},
      sys_pwd = #{sysPwd,jdbcType=CHAR}
    where sys_id = #{sysId,jdbcType=INTEGER}
  </update>
  
  <!-- 登录 -->
